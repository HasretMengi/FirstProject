@model List<Alchemy.Models.Robot>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .card {
        width: calc(33.33% - 10px);
        /* Pour trois cartes par rangée avec un espace */
        margin-bottom: 20px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    h5 {
        color: red;
        font-weight: bolder;
        text-decoration: underline;
    }
</style>

<div class="card-container">
    @foreach (var robot in Model)
    {
        <div class="card text-center mx-auto">
            <img class="card-img-top" src="https://robohash.org/@robot.Nom" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">WANTED</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>ID :</strong> @robot.Id</li>
                <li class="list-group-item"><strong>Nom :</strong> @robot.Nom</li>
                <a href="@Url.Action("RobotDetails", "Robot", new { id = robot.Id })" class="btn btn-primary">Détails</a>
            </ul>
        </div>
    }
</div>
